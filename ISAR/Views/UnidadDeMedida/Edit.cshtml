@model ISAR.Models.UnidadDeMedida

@{
    ViewBag.Title = "Editar Unidad de Medida";
    ViewBag.Grupo = "Administración";
    ViewBag.Pantalla = ViewBag.Title;
}

<h4>@ViewBag.Title</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group form-group-default required">
            @Html.LabelFor(model => model.Nombre)
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", required = "" } })
        </div>

        <div class="form-group form-group-default required">
            @Html.LabelFor(model => model.Abreviatura)
            @Html.EditorFor(model => model.Abreviatura, new { htmlAttributes = new { @class = "form-control", required = "" } })
        </div>

        <a href="@Url.Action("index")" class="btn btn-warning btn-cons">Regresar</a> <input type="submit" value="Editar Unidad de Medida" class="btn btn-success btn-cons" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
