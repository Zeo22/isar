@using System.Web.Script.Serialization;
@using ISAR.Models;
@model ISAR.Models.RoleViewModel

@{
    JavaScriptSerializer json = new JavaScriptSerializer();
    ViewBag.Title = "Editar Rol";
    ViewBag.Grupo = "Administración";
    ViewBag.Pantalla = ViewBag.Title;
    List<GrupoPantalla> grupos = ViewBag.Grupos;
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12" id="myFormWizard">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator">
                <li class="active">
                    <a data-toggle="tab" href="#tab1"><span>Rol</span></a>
                </li>
                <li class="">
                    <a data-toggle="tab" href="#tab2"><span>Permisos</span></a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active slide" id="tab1">
                    <div class="form-group form-group-default required">
                        @Html.LabelFor(model => model.Name, "Rol")
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", requiered = "true" })
                    </div>
                </div>
                <div class="tab-pane slide" id="tab2">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group form-group-default">
                                @Html.Label("Pantallas", "Pantallas")
                                <select class="full-width" id="Pantallas" name="Pantallas">
                                    @foreach (GrupoPantalla grupo in grupos)
                                    {
                                        <optgroup label="@grupo.Nombre">
                                            @foreach (Pantalla pantalla in grupo.Pantallas)
                                            {
                                                <option value="@pantalla.ID">@pantalla.Nombre</option>
                                            }
                                        </optgroup>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group panel panel-default">
                                <div class="panel-heading"><label>Permisos</label></div>
                                <div class="panel-body">
                                    <div class="checkbox check-success">
                                        <input type="checkbox" name="Lectura" value="hola" id="Lectura" class="checkbox-inline" />
                                        @Html.Label("Lectura")
                                    </div>
                                    <div class="checkbox check-success">
                                        <input type="checkbox" name="Escritura" id="Escritura" class="checkbox-inline" />
                                        @Html.Label("Escritura")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary btn-cons pull-right" type="button" id="btnAdd">
                                <span>Agregar</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table" id="dtTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Grupo
                                        </th>
                                        <th>
                                            Nombre
                                        </th>
                                        <th>
                                            Lectura
                                        </th>
                                        <th>
                                            Escritura
                                        </th>
                                        <th>
                                            Eliminar
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <ul class="pager wizard">
                    <li class="next">
                        <button class="btn btn-primary btn-cons pull-right" type="button">
                            <span>Siguiente</span>
                        </button>
                    </li>
                    <li class="next finish" style="display:none;">
                        <input type="submit" value="Finalizar" class="btn btn-success btn-cons pull-right" />
                        @*<button class="btn btn-success btn-cons pull-right" type="button" id="btnFinalizar">
                            <span>Finalizar</span>
                        </button>*@
                    </li>
                    <li class="previous first" style="display:none;">
                        <button class="btn btn-white btn-cons pull-right" type="button">
                            <span>Primero</span>
                        </button>
                    </li>
                    <li class="previous">
                        <button class="btn btn-white btn-cons pull-right" type="button">
                            <span>Anterior</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/assets/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/assets/plugins/boostrap-form-wizard/js/jquery.bootstrap.wizard.min.js"></script>
    <script>
        var initial_data = @Html.Raw(json.Serialize(Model.Permisos));
        var action_url = "@Url.Action("editar")";
    </script>
    @Scripts.Render("~/Scripts/Roles/AddEdit.js")
}
