@using ISAR.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<img src="@Url.Content("~/assets/img/logo.png")" alt="logo" data-src="@Url.Content("~/assets/img/logo.png")" data-src-retina="@Url.Content("~/assets/img/logo_2x.png")" width="78" height="22">
<p class="p-t-35">Ingrese sus credenciales para acceder al sistema.</p>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group form-group-default">
        @Html.Label("Usuario")
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Usuario", required = "true" })
    </div>
    <div class="form-group form-group-default">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "true" })
    </div>
    <input type="submit" value="Ingresar" class="btn btn-primary btn-cons m-t-10" />
}

@section Scripts {
    
}