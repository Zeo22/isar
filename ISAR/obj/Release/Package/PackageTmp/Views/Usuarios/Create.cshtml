@model ISAR.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
    ViewBag.Grupo = "Administración";
    ViewBag.Pantalla = ViewBag.Title;
}

@using (Html.BeginForm("Create", "Usuarios", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <h4>Create a new account.</h4>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-error" })

            <div class="form-group form-group-default required">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group form-group-default required">
                @Html.LabelFor(m => m.Nombre)
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            </div>
            <div class="form-group form-group-default required">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group form-group-default required">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group form-group-default required">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group panel panel-default">
                <div class="panel-heading"><label>Select User Role</label></div>
                <div class="panel-body">
                    @foreach (var item in (SelectList)ViewBag.RoleId)
                    {
                        <div class="checkbox check-success">
                            <input type="checkbox" name="SelectedRoles" value="@item.Value" id="@item.Value" class="checkbox-inline" />
                            @Html.Label(item.Value)
                        </div>
                    }
                </div>
            </div>
            <div class="clearfix"></div>
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
